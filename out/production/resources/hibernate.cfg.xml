<hibernate-configuration>
<session-factory>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/lab6</property>
    <property name="hibernate.connection.username">lab</property>
    <property name="hibernate.connection.password">4444</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL92Dialect</property>
    <property name="show_sql">true</property>
    <property name="connection_pool_size">1</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hbm2ddl.auto">create</property>

    <mapping class = "database.TypeOfCompany"/>
    <mapping class = "database.Company"/>
    <mapping class = "database.Directory" />
    <mapping class= "database.Country"/>
    <mapping class= "database.Office" />
    <mapping class="database.Worker" />

</session-factory>
</hibernate-configuration>
